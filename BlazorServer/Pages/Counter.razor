@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p style="font-family:@fontFamily"> Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;
    private string fontFamily = "Verdana";

    //3 min på: https:// www.youtube.com/watch?v=KseDLejhYi0&list=PL6n9fhu94yhVowClAs8-6nYnfsOTma14P&index=4&ab_channel=kudvenkat

    private void IncrementCount()
    {
        currentCount += 5;
    }
}
